<Window x:Class="GuckGuck.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:GuckGuck"
	mc:Ignorable="d"
	Title="MainWindow" Height="450" Width="800"
	WindowStyle="None"
	AllowsTransparency="True"
	FontFamily="./Fonts/#Overpass Mono Light"
	ResizeMode="CanResize">

	<Window.Resources>
		<Storyboard x:Key="PulsateAnimation" RepeatBehavior="Forever" AutoReverse="True">
			<ColorAnimation
				Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
				From="#ff0000" To="#ff8e8e" Duration="0:0:1" />
		</Storyboard>
	</Window.Resources>
	<WindowChrome.WindowChrome>
		<WindowChrome
			CaptionHeight="1"
			CornerRadius="4"
			ResizeBorderThickness="4"
			GlassFrameThickness="0" />
	</WindowChrome.WindowChrome>
	<Window.Background>
		<SolidColorBrush Color="#CCD8DC" Opacity="0.1" />
	</Window.Background>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Border Grid.Row="0" Background="#1E1E1E"
			MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
			<Grid>
				<Image Source="/Images/logo.png" VerticalAlignment="Center"
					HorizontalAlignment="Left" Width="80" Margin="0,4" />

				<TextBlock x:Name="OnAirTextBlock" Visibility="Collapsed" Text="ON AIR"
					VerticalAlignment="Center" HorizontalAlignment="Left"
					Margin="10,0,0,0" FontSize="12" FontWeight="Bold" Foreground="Red">
					<TextBlock.Triggers>
						<EventTrigger RoutedEvent="TextBlock.Loaded">
							<BeginStoryboard Storyboard="{StaticResource PulsateAnimation}" />
						</EventTrigger>
					</TextBlock.Triggers>
				</TextBlock>
				<Button Content="X" Width="40" Height="30" HorizontalAlignment="Right"
					VerticalAlignment="Center"
					Background="Transparent" Foreground="White"
					BorderBrush="Transparent"
					Click="CloseButton_Click" />
			</Grid>
		</Border>

		<Border x:Name="CaptureBorder" Grid.Row="1" BorderBrush="#41ef90"
			BorderThickness="2" Background="Transparent" />
		<Grid Grid.Row="3" Background="#1E1E1E">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<TextBox x:Name="UrlTextBox" Foreground="White" Grid.Row="1" IsReadOnly="True"
					VerticalAlignment="Center" Margin="5" Background="#333333" FontSize="13" />
				<Button Content="Visit" FontSize="13" Grid.Column="1" Margin="5"
					Background="#41ef90" Grid.Row="1"
					Foreground="Black" Click="VisitButton_Click" />
			</Grid>
			<Grid Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<StackPanel Orientation="Horizontal" Grid.Column="1">
					<Button Content="-" Background="#41ef90" Foreground="Black"
						FontSize="13"
						Click="DecreaseInterval_Click" Width="32" VerticalContentAlignment="Center" />
					<RichTextBox x:Name="IntervalTextBox" Width="50"
						HorizontalContentAlignment="Center"
						Background="#333333"
						Foreground="White"
						FontSize="13"
						PreviewTextInput="IntervalTextBox_PreviewTextInput">
						<FlowDocument>
							<Paragraph>
								<Run x:Name="IntervalRun"
									FontSize="13"
									FontFamily="./Fonts/#Overpass Mono Light">1 </Run>
							</Paragraph>
						</FlowDocument>
					</RichTextBox>
					<Button Content="+" Background="#41ef90" Foreground="Black"
						Click="IncreaseInterval_Click" Width="32" FontSize="13"
						VerticalContentAlignment="Center" />
					<Button x:Name="UnitButton" Content="Minutes" FontSize="13" Background="#41ef90"
						Width="100"
						Foreground="Black" Click="UnitButton_Click" />
				</StackPanel>
				<Button x:Name="StartButton" Content="Start" FontSize="13"
					HorizontalAlignment="Stretch"
					Background="#41ef90" Foreground="Black" Click="ScreenshotButton_Click" />
			</Grid>
		</Grid>
	</Grid>
</Window>