<Window x:Class="GuckGuck.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:GuckGuck"
	mc:Ignorable="d"
	Title="MainWindow" Height="450" Width="800"
	WindowStyle="None"
	AllowsTransparency="True"
	ResizeMode="CanResize">
	<WindowChrome.WindowChrome>
		<WindowChrome
			CaptionHeight="1"
			CornerRadius="12"
			ResizeBorderThickness="4"
			GlassFrameThickness="0" />
	</WindowChrome.WindowChrome>
	<Window.Background>
		<SolidColorBrush Color="#CCD8DC" Opacity="0.1" />
	</Window.Background>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Border Grid.Row="0" Background="#007EA7"
			MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
			<TextBlock Text="GuckGuck" VerticalAlignment="Center" HorizontalAlignment="Center"
				Foreground="White" FontSize="20" FontWeight="Bold" />
		</Border>

		<Border x:Name="CaptureBorder" Grid.Row="1" BorderBrush="#007EA7"
			BorderThickness="2" Background="Transparent" />
        <Grid Grid.Row="3" Background="#003249">
            <Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
			<TextBox x:Name="UrlTextBox" Foreground="White" Grid.Row="1"
				VerticalAlignment="Center" Margin="5" />
			<Button Content="Visit" Grid.Column="1" Margin="5" Background="#007EA7" Grid.Row="1"
				Foreground="White" />
            </Grid>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <TextBox x:Name="IntervalTextBox" Width="50" Margin="5"
					Background="#CCD8DC" Foreground="Black" />
                <Button Content="Minutes" Margin="5" Background="#007EA7" Foreground="White" />
                <Button Content="Start" Margin="5" Background="#007EA7" Foreground="White" />
            </StackPanel>
            <StackPanel Grid.Row="0" Orientation="Horizontal"
				Background="#003249"
				Width="200"
				MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
				<Button Content="Screenshot" Width="32" Margin="5" Background="#80CED7"
					Foreground="White" Click="ScreenshotButton_Click" />
				<Button Content="Fullscreen Capture" Width="32" Margin="5" Background="#80CED7"
					Foreground="White" Click="FullscreenCaptureButton_Click" />
			</StackPanel>
		</Grid>
	</Grid>
</Window>