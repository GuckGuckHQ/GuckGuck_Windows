<Window x:Class="GuckGuck.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:GuckGuck"
	mc:Ignorable="d"
	Title="MainWindow" Height="450" Width="800"
	WindowStyle="None"
	AllowsTransparency="True"
	ResizeMode="CanResize">
	<WindowChrome.WindowChrome>
		<WindowChrome
			CaptionHeight="1"
			CornerRadius="12"
			ResizeBorderThickness="4"
			GlassFrameThickness="0" />
	</WindowChrome.WindowChrome>
	<Window.Background>
		<SolidColorBrush Color="#CCD8DC" Opacity="0.1" />
	</Window.Background>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Border Grid.Row="0" Background="#007EA7"
			MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
			<TextBlock Text="GuckGuck" VerticalAlignment="Center" HorizontalAlignment="Center"
				Foreground="White" FontSize="20" FontWeight="Bold" />
			<Button Content="X" Width="30" Height="30" HorizontalAlignment="Right"
				VerticalAlignment="Center"
				Margin="0,0,10,0" Background="Transparent" Foreground="White"
				BorderBrush="Transparent"
				Click="CloseButton_Click" />
            </Grid>
        </Border>

		<Border x:Name="CaptureBorder" Grid.Row="1" BorderBrush="#007EA7"
			BorderThickness="2" Background="Transparent" />
		<Grid Grid.Row="3" Background="#003249">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<TextBox x:Name="UrlTextBox" Foreground="White" Grid.Row="1"
					VerticalAlignment="Center" Margin="5" />
				<Button Content="Visit" Grid.Column="1" Margin="5" Background="#007EA7" Grid.Row="1"
					Foreground="White" />
			</Grid>
			<Grid Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<StackPanel Orientation="Horizontal" Grid.Column="1">
					<Button Content="-" Background="#007EA7" Foreground="White"
						Click="DecreaseInterval_Click" Width="32" VerticalContentAlignment="Center" />
					<TextBox x:Name="IntervalTextBox" Width="50" HorizontalContentAlignment="Center"
						Background="#CCD8DC"
						Foreground="Black" TextWrapping="NoWrap" />
					<Button Content="+" Background="#007EA7" Foreground="White"
						Click="IncreaseInterval_Click" Width="32" VerticalContentAlignment="Center" />
					<Button x:Name="UnitButton" Content="Minutes" Background="#007EA7" Width="100"
						Foreground="White" Click="UnitButton_Click" />

				</StackPanel>
				<Button Content="Start" HorizontalAlignment="Stretch" Background="#80CED7" />
			</Grid>
		</Grid>
	</Grid>
</Window>