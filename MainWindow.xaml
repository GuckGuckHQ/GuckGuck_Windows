<Window x:Class="GuckGuck.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:GuckGuck"
	mc:Ignorable="d"
	Title="MainWindow" Height="450" Width="800"
	WindowStyle="None"
	AllowsTransparency="True"
	ResizeMode="CanResize">
	<Window.Resources>
		<Storyboard x:Key="PulsateAnimation" RepeatBehavior="Forever" AutoReverse="True">
			<ColorAnimation
				Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
				From="#ff0000" To="#ff8e8e" Duration="0:0:1" />
		</Storyboard>
	</Window.Resources>
	<WindowChrome.WindowChrome>
		<WindowChrome
			CaptionHeight="1"
			CornerRadius="12"
			ResizeBorderThickness="4"
			GlassFrameThickness="0" />
	</WindowChrome.WindowChrome>
	<Window.Background>
		<SolidColorBrush Color="#CCD8DC" Opacity="0.1" />
	</Window.Background>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Border Grid.Row="0" Background="#007EA7"
			MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
			<Grid>
				<TextBlock Text="GuckGuck" VerticalAlignment="Center" HorizontalAlignment="Center"
					Foreground="White" FontSize="20" FontWeight="Bold" />
				<TextBlock Text="ON AIR" VerticalAlignment="Center" HorizontalAlignment="Left"
					Margin="10,0,0,0" FontSize="12" FontWeight="Bold" Foreground="Red">
					<TextBlock.Triggers>
						<EventTrigger RoutedEvent="TextBlock.Loaded">
							<BeginStoryboard Storyboard="{StaticResource PulsateAnimation}" />
						</EventTrigger>
					</TextBlock.Triggers>
				</TextBlock>
				<Button Content="X" Width="40" Height="30" HorizontalAlignment="Right"
					VerticalAlignment="Center"
					Background="Transparent" Foreground="White"
					BorderBrush="Transparent"
					Click="CloseButton_Click" />
			</Grid>
		</Border>

		<Border x:Name="CaptureBorder" Grid.Row="1" BorderBrush="#007EA7"
			BorderThickness="2" Background="Transparent" />
		<Grid Grid.Row="3" Background="#003249">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<TextBox x:Name="UrlTextBox" Foreground="White" Grid.Row="1"
					VerticalAlignment="Center" Margin="5" />
				<Button Content="Visit" Grid.Column="1" Margin="5" Background="#007EA7" Grid.Row="1"
					Foreground="White" Click="VisitButton_Click" />
			</Grid>
			<Grid Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<StackPanel Orientation="Horizontal" Grid.Column="1">
					<Button Content="-" Background="#007EA7" Foreground="White"
						Click="DecreaseInterval_Click" Width="32" VerticalContentAlignment="Center" />
					<TextBox x:Name="IntervalTextBox" Width="50" Text="1"
						HorizontalContentAlignment="Center"
						Background="#CCD8DC"
						Foreground="Black" TextWrapping="NoWrap"
						PreviewTextInput="IntervalTextBox_PreviewTextInput" />
					<Button Content="+" Background="#007EA7" Foreground="White"
						Click="IncreaseInterval_Click" Width="32" VerticalContentAlignment="Center" />
					<Button x:Name="UnitButton" Content="Minutes" Background="#007EA7" Width="100"
						Foreground="White" Click="UnitButton_Click" />

				</StackPanel>
				<Button x:Name="StartButton" Content="Start" HorizontalAlignment="Stretch"
					Background="#80CED7" Click="ScreenshotButton_Click" />
			</Grid>
		</Grid>
	</Grid>
</Window>