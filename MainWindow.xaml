<Window x:Class="GuckGuck.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:GuckGuck"
	mc:Ignorable="d"
	Title="MainWindow" Height="450" Width="800"
	WindowStyle="None"
	AllowsTransparency="True"
	ResizeMode="CanResize">
	<WindowChrome.WindowChrome>
		<WindowChrome
			CaptionHeight="1"
			CornerRadius="12"
			ResizeBorderThickness="4"
			GlassFrameThickness="0" />
	</WindowChrome.WindowChrome>
	<Window.Background>
		<SolidColorBrush Color="#CCD8DC" Opacity="0.1" />
	</Window.Background>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="42" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
            <RowDefinition Height="42" />
        </Grid.RowDefinitions>
		<Border Grid.Row="0" Grid.ColumnSpan="2" Background="#007EA7"
			MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
			<TextBlock Text="GuckGuck" VerticalAlignment="Center" HorizontalAlignment="Center"
				Foreground="White" FontSize="20" FontWeight="Bold" />
		</Border>
		<StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Background="#003249"
			MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
			<Button Content="Screenshot" Width="32" Margin="5" Background="#80CED7"
				Foreground="White" Click="ScreenshotButton_Click" />
			<Button Content="Fullscreen Capture" Width="32" Margin="5" Background="#80CED7"
				Foreground="White" Click="FullscreenCaptureButton_Click" />
		</StackPanel>
		<Border x:Name="CaptureBorder" Grid.Row="1" Grid.Column="1" BorderBrush="#007EA7"
			BorderThickness="2" Background="Transparent" />
		<Grid Grid.Row="2" Grid.ColumnSpan="2" Background="#003249">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<TextBlock x:Name="UrlTextBox" Grid.Column="0" Foreground="White"
				VerticalAlignment="Center" Margin="5" />
			<Button Content="Visit" Grid.Column="1" Margin="5" Background="#007EA7"
				Foreground="White" />
			<StackPanel Orientation="Horizontal" Grid.Column="2">
				<TextBox x:Name="IntervalTextBox" Grid.Column="0" Width="50" Margin="5"
					Background="#CCD8DC" Foreground="Black" />
				<Button Content="Minutes" Margin="5" Background="#007EA7" Foreground="White" />
				<Button Content="Start" Margin="5" Background="#007EA7" Foreground="White" />
			</StackPanel>
		</Grid>
	</Grid>
</Window>